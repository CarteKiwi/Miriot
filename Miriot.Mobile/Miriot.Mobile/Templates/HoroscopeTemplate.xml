<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              x:Key="DefaultTemplate">
  <Grid Margin="0,0,0,40">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <TextBlock Text="{Binding Title}"
                   FontSize="16"
                   VerticalAlignment="Center"
                   FontStyle="Italic"/>

    <ToggleSwitch Margin="0,0,0,0"
                  BorderThickness="0"
                  HorizontalAlignment="Right"
                  Grid.Column="1" Foreground="White"
                  OffContent="Off"
                  OnContent="On"
                  IsOn="{Binding IsActive, Mode=TwoWay}">
    </ToggleSwitch>

    <StackPanel Orientation="Horizontal"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="0,-10,0,0">

      <TextBlock Text="Positionnement: (x:"
                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 FontSize="15"
                 Margin="0,0,0,0"/>

      <TextBox Text="{Binding X, Mode=TwoWay}"
               BorderThickness="0,0,0,1"
               BorderBrush="#0c0d18"
               Background="Transparent"
               Foreground="White"
               MinWidth="30"
               HorizontalAlignment="Left" VerticalAlignment="Center"
               FontSize="18"/>

      <TextBlock Text="y:"
                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 FontSize="15"
                 Margin="0,0,0,0"/>

      <TextBox Text="{Binding Y, Mode=TwoWay}"
               HorizontalAlignment="Left" VerticalAlignment="Center"
               FontSize="18"
               MinWidth="30"
               BorderBrush="#0c0d18"
               Background="Transparent"
               BorderThickness="0,0,0,1"
               Margin="0,0,0,0"/>

      <TextBlock Text=")"
                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 FontSize="15"
                 Margin="0,0,0,0"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="0,-10,0,0">

      <TextBlock Text="Signe astrologique"
                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 FontSize="15"
                 Margin="0,0,0,0"/>
      
      <ComboBox ItemsSource="{Binding Signs}" SelectedItem="{Binding Sign, Mode=TwoWay}"
                Grid.Row="2"
                Grid.Column="1"
                BorderThickness="0,0,0,1"
                BorderBrush="#0c0d18"
                Background="Transparent"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="0,0,0,0"/>
      
    </StackPanel>

  </Grid>
</DataTemplate>
