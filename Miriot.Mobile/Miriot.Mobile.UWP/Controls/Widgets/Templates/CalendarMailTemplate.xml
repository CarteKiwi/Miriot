<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:ctrl="clr-namespace:Miriot.Mobile.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <ContentPage.Resources>
    <ResourceDictionary>
      <DataTemplate x:Key="DefaultTemplate">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
          </Grid.RowDefinitions>

          <Label Text="{Binding Title}"
                 FontSize="16"
                 VerticalOptions="Center"/>

          <Switch Margin="0,0,0,0"
                  HorizontalOptions="End"
                  Grid.Column="1"
                  IsToggled="{Binding IsActive, Mode=TwoWay}">
          </Switch>

          <StackLayout Orientation="Horizontal"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Margin="0,-10,0,0">

            <Label Text="Positionnement: (x:"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   FontSize="15"
                   Margin="0,0,0,0"/>

            <Entry Text="{Binding X, Mode=TwoWay}"
                   TextColor="White"
                   MinimumWidthRequest="30"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   FontSize="18"/>

            <Label Text="y:"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   FontSize="15"
                   Margin="0,0,0,0"/>

            <Entry Text="{Binding Y, Mode=TwoWay}"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   FontSize="18"
                   MinimumWidthRequest="30"
                   Margin="0,0,0,0"/>

            <Label Text=")"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   FontSize="15"
                   Margin="0,0,0,0"/>
          </StackLayout>

          <Grid Margin="0,0,0,15"
                IsVisible="{Binding IsActive, Mode=OneWay}"
                Grid.Row="2"
                Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--<ctrl:EllipseView HeightRequest="32" WidthRequest="32"
                              StrokeThickness="1"
                              Stroke="White">
              <ctrl:EllipseView.Fill>
                <ImageBrush ImageSource="{Binding User.Photo, 
                      FallbackValue='ms-appx:///Assets/Square44x44Logo.scale-200.png',
                      Converter={StaticResource ByteArrayToImageConverter}}"/>
              </ctrl:EllipseView.Fill>
            </ctrl:EllipseView>-->
            
            <Label Grid.Column="1"
                   Grid.Row="0"
                   Margin="5"
                   Text="{Binding User.Name}"
                   VerticalOptions="Center"
                   FontSize="15"/>
          </Grid>
        </Grid>
      </DataTemplate>
    </ResourceDictionary>
  </ContentPage.Resources>
</ContentPage>