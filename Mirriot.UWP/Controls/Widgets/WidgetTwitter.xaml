<controls:WidgetBase
    x:Class="Miriot.Controls.WidgetTwitter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Miriot.Controls"
    xmlns:twitter="using:Miriot.Common.Model.Widgets.Twitter"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    RequestedTheme="Dark"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ListView ItemsSource="{x:Bind Tweets}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <AddDeleteThemeTransition/>
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="twitter:Tweet">
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Height="32" Width="32"
                                     StrokeThickness="1"
                                     Stroke="White">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{x:Bind User.ProfileImageUrl}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Grid.Column="1"
                                       Grid.Row="0"
                                       Margin="5"
                                       Text="{x:Bind User.ScreenName}"
                                       Typography.Capitals="AllSmallCaps"
                                       VerticalAlignment="Center"
                                       FontSize="15"/>
                        <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{x:Bind Text}"
                                       TextWrapping="WrapWholeWords"
                                       FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</controls:WidgetBase>